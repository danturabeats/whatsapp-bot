# ==============================================================
# WhatsApp Bot Environment Configuration
# ==============================================================
# Copy this file to .env and fill in your actual values

# MongoDB Atlas Connection String
# Get this from your MongoDB Atlas dashboard
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/whatsapp-bot?retryWrites=true&w=majority

# Google Gemini AI API Key
# Get this from Google AI Studio (https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Admin phone number for notifications (with country code)
# Format: 972XXXXXXXXX (replace with your number)
ADMIN_PHONE=972XXXXXXXXX

# Optional: Logging level
LOG_LEVEL=info

# Optional: Port for web server (Render will set this automatically)
PORT=3000